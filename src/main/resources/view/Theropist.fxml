<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pos.controller.TheropistController">
   <children>
      <VBox prefHeight="800.0" prefWidth="800.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Therapist Management">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0" />
            <VBox prefHeight="503.0" prefWidth="779.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label minWidth="100" text="Therapist ID">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txttherapistId" alignment="CENTER" editable="false" prefWidth="250.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label minWidth="100" text="Name">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtName" alignment="CENTER" prefWidth="250.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label minWidth="100" text="Contact">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtContact" alignment="CENTER" prefWidth="250.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label minWidth="100" text="Email">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtEmail" alignment="CENTER" prefWidth="250.0" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label minWidth="100" text="Status">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <RadioButton fx:id="rbActive" mnemonicParsing="false" text="active">
                           <padding>
                              <Insets right="30.0" />
                           </padding>
                           <toggleGroup>
                              <ToggleGroup fx:id="statusBtnGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rbInActive" mnemonicParsing="false" text="in-active" toggleGroup="$statusBtnGroup" />
<!--                        <ComboBox fx:id="availabilityStatusComboBox" prefWidth="250.0">-->
<!--                           <items>-->
<!--                              <fx:array fx:factory="javafx.collections.FXCollections">-->
<!--                                 <String fx:value="Available"/>-->
<!--                                 <String fx:value="Partially Available"/>-->
<!--                                 <String fx:value="Booked"/>-->
<!--                                 <String fx:value="On Leave"/>-->
<!--                              </fx:array>-->
<!--                           </items>-->
<!--                        </ComboBox>-->
                     </children>
                  </HBox>

                  <!-- Action Buttons -->
                  <HBox alignment="CENTER" prefHeight="40.0" spacing="20">
                     <Button fx:id="btnAddTheropist" onAction="#btnAddTheropistOnAction" prefWidth="75.0" text="Add" />
                     <Button fx:id="btnUpdateTheropist" onAction="#btnUpdateTheropistOnAction" prefWidth="75.0" text="Update" />
                     <Button fx:id="btnDeleteTheropist" onAction="#btnDeleteTheropistOnAction" prefWidth="75.0" text="Delete" />
                  </HBox>

                  <!-- Therapist Schedule Table -->
                  <TableView fx:id="tblTheropist" onMouseClicked="#tblTheropistOnAction" prefHeight="200.0" prefWidth="779.0">
                     <columns>
                        <TableColumn fx:id="colTherapistId" prefWidth="125.59997975826263" text="Therapist ID" />
                        <TableColumn fx:id="colName" prefWidth="142.4000015258789" text="Name" />
                        <TableColumn fx:id="colContact" prefWidth="182.40008544921875" text="Contact" />
                        <TableColumn fx:id="colEmail" prefWidth="174.39996337890625" text="Email" />
                        <TableColumn fx:id="colStatuts" prefWidth="130.4000244140625" text="Status" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
